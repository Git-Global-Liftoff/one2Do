@model List<one2Do.WeatherModel.City>

@{
    ViewData["Title"] = "Manage Cities";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 mb-3">
            <h2 class="text-center">Search by Cities</h2>
        </div>
    </div>

    <!-- Form to add a new city -->
    <div class="row mb-3">
        <div class="col-md-6 mx-auto">
            <form asp-action="AddCity" method="post">
                <div class="input-group">
                    <input type="text" id="cityName" name="cityName" class="form-control" placeholder="Enter city name" required />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-success">Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @foreach (var city in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">@city.Name</h5>
                        <table class="table table-bordered"> <!-- Adding borders to the table -->
                            <tbody>
                                <tr>
                                    <th scope="row">Temperature</th>
                                    <td><span class="badge alert-primary">@city.Temperature Â°F</span></td>
                                </tr>
                                <tr>
                                    <th scope="row">Humidity</th>
                                    <td><span class="badge alert-primary">@city.Humidity %</span></td>
                                </tr>
                                <tr>
                                    <th scope="row">Pressure</th>
                                    <td><span class="badge alert-primary">@city.Pressure hPa</span></td>
                                </tr>
                                <tr>
                                    <th scope="row">Wind Speed</th>
                                    <td><span class="badge alert-primary">@city.Wind mph</span></td>
                                </tr>
                                <tr>
                                    <th scope="row">Weather</th>
                                    <td><span class="badge alert-primary">@city.Weather</span></td>
                                </tr>
                            </tbody>
                        </table>
                        <form asp-action="RemoveCity" method="post" onsubmit="return confirm('Are you sure you want to remove this city?');">
                            <input type="hidden" name="cityName" value="@city.Name" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.Count == 0)
    {
        <div class="row">
            <div class="col-md-12 text-center">
                <p>No cities added yet.</p>
            </div>
        </div>
    }

    <div class="row mt-3">
        <div class="col-md-6 mx-auto text-center">
            <a asp-controller="User" asp-action="Index" class="btn btn-primary btn-lg">Back to Home</a>
        </div>
    </div>
</div>
